{
    "compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"noEmitHelpers": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
	      "node_modules/@types"
	    ],
	    "types" : [
	      "node",
	      "jasmine",
	      "core-js"
	    ],
	    "lib": [
	       "dom",
	       "es6"
	     ]
	},
  	"exclude": [
    	"node_modules"
  	]
}
